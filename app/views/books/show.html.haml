.row
  .col-sm-9
    .page-header
      %h1.title
        = @book.title.present? ? @book.title : 'Untitled'
        - if @book.volume.present?
          %br
          %small.volume= @book.volume
        - if @book.author.present?
          %br
          %small.author= @book.author
        - if @book.date.present?
          %br
          %small.date= @book.date

  .col-sm-3
    .btn-group{ role: 'group', style: 'float:right' }
      .btn-group{ role: 'group' }
        %button.btn.btn-default.dropdown-toggle{'type' => 'button', 'data-toggle' => 'dropdown', 'aria-expanded' => 'false' }
          View In&hellip;
          %span.caret
        %ul.dropdown-menu{ role: 'menu' }
          %li= link_to('UIUC Catalog', @book.uiuc_catalog_url, target: '_blank')
          %li{ 'class' => @book.exists_in_hathitrust ? '' : 'disabled' }
            =link_to('HathiTrust', @book.hathitrust_handle, target: '_blank')
          %li{ 'class' => @book.exists_in_internet_archive ? '' : 'disabled' }
            = link_to('Internet Archive', @book.internet_archive_url, target: '_blank')
      = link_to(book_path(@book, format: :json),
                    class: 'btn btn-default', target: '_blank') do
        %span.glyphicon.glyphicon-new-window{ 'aria-hidden' => true }
        JSON

.row
  .col-sm-9
    .panel.panel-default
      .panel-heading
        %h3.panel-title Ingest
      .panel-body#book-tracker-ingest-panel
        %dl
          %dt First Ingest
          %dd= local_time(@book.created_at)
          %dt Latest Update
          %dd= local_time(@book.updated_at)
          %dt Source Path
          %dd= @book.source_path
  .col-sm-3
    .panel.panel-default
      .panel-heading
        %h3.panel-title Info
      .panel-body
        %dl
          %dt Bib ID
          %dd= @book.bib_id
          %dt Object ID
          %dd= @book.obj_id
          %dt Medusa ID
          %dd= @book.id
          %dt OCLC Number
          %dd= @book.oclc_number
          %dt HathiTrust Rights
          %dd= @book.exists_in_hathitrust ? readable_hathitrust_rights(@book) : 'N/A'
          %dt HathiTrust Access
          %dd= @book.exists_in_hathitrust ? @book.hathitrust_access : 'N/A'
          %dt Language
          %dd= @book.language
          %dt Subjects
          %dd= @book.subject&.split(Book::SUBJECT_DELIMITER)&.join(', ')

#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{'data-toggle' => 'collapse', 'data-parent' => '#accordion', 'href' => '#collapseOne'}
          Raw MARCXML
    #collapseOne.panel-collapse.collapse.in
      .panel-body
        %pre= @book.raw_marcxml
